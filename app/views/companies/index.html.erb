<p id="notice"><%= notice %></p>

<h1>Companies</h1>
<hr>

<table>
  <thead>
    <tr>
      <th><h2>Name</h2></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><h4><%= link_to company.name, company %></h4></td>
        <td><%= link_to 'Edit', edit_company_path(company), class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'%></td>
      </tr>
      <% company.areas.uniq.each do |area| %>
      <tr>
        <td>> Area: <%= area.name %> </td>
        <td> Empleados: <%= Employee.where(company_id: company.id, area_id: area.id).count %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
